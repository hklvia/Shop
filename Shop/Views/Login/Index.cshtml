
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>.Net后台管理系统 | 登录</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- SweetAlert2 -->
    <link href="~/Statics/Adminlte/plugins/sweetalert2-9.14.0/dist/sweetalert2.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Statics/Adminlte/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Statics/Adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Statics/Adminlte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Statics/Adminlte/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.loli.net/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="login-page" style="min-height: 485px;">
    <div class="login-box">
        <div class="login-logo">
            <a href="#">Asp<b>.Net</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">登录以进行您的操作</p>

                <form action="/Login/SignIn" method="post">
                    <div class="input-group mb-3">
                        <input type="text" id="name" name="name" class="form-control" placeholder="用户名">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" name="password" id="password" class="form-control" placeholder="密码">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    记住密码
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="button" class="btn btn-primary btn-block" onclick="Login()">登  录</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                    </a>
                </div>
                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a href="forgot-password.html">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a href="register.html" class="text-center">Register a new membership</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- SweetAlert2 -->
    <script src="~/Statics/Adminlte/plugins/sweetalert2-9.14.0/dist/sweetalert2.js"></script>
    <!-- jQuery -->
    <script src="~/Statics/Adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Statics/Adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Statics/Adminlte/dist/js/adminlte.min.js"></script>

    <script>
        function Login() {
            var formData = new FormData();
            formData.append("Name", $("#name").val());
            formData.append("password", $("#password").val());

            $.ajax({
                url: "/Login/SignIn",
                type: 'POST',
                data: formData,
                async: false,
                dataType: "json",
                // 告诉jQuery不要去处理发送的数据
                processData: false,
                // 告诉jQuery不要去设置Content-Type请求头
                contentType: false,
                success: function (result) {
                    if (result.state == true) {
                        window.location.href = "/Product/List";
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: result.msg
                        })
                    }
                },
                error: function (result) {
                    Swal.fire({
                        icon: 'error',
                        title: "网络连接异常！"
                    })
                }
            })
        }
    </script>
</body>
</html>
