
@{
    ViewBag.Title = "Sku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>添加商品规格</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/ProductCategory/List">首页</a></li>
                    <li class="breadcrumb-item active">商品规格</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-header">
                    <button class="btn btn-outline-primary" id="alertAddModal">添加规格</button>
                </div>
                <!-- /.card-header -->
                <!-- form start  action="/ProductCategory/Add"-->
                <div class="card-body">

                    <table style="width: 100%" id="table" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                        <thead>
                            <tr role="row">
                                <th>序号</th>
                                <th>名称</th>
                                @*<th>规格值</th>*@
                                <th>录入方式</th>
                                <th>排序号</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                    </table>

                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>

    <!--添加弹出框-->
    <div class="modal fade" id="add-modal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 id="add-modal-title" class="modal-title">添加规格</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group row">
                        <label for="AttrName" class="col-sm-3 col-form-label">规格名称:</label>
                        <div class="col-sm-9">
                            <input type="text" name="AttrName" id="AttrName" class="form-control" placeholder="请输入规格名称" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="OrderNum" class="col-sm-3 col-form-label">录入方式:</label>
                        <div class="col-sm-9">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="icheck-primary">
                                        <input type="radio" id="r1" name="enterType" checked="" value="1">
                                        <label for="r1" style="font-weight:normal">
                                            手动录入
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="icheck-primary">
                                        <input type="radio" id="r2" name="enterType" value="2">
                                        <label for="r2" style="font-weight:normal">
                                            下拉选择
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">规格值:</label>
                        <div class="col-sm-9" id="attrValues">
                            <div>
                                <button type="button" name="OrderNum" id="addAttrValue" class="btn btn-outline-primary">点击添加</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">关联图片:</label>
                        <div class="col-sm-9">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="icheck-primary">
                                        <input type="radio" id="IsImg1" name="IsImg" value="0">
                                        <label for="IsImg1" style="font-weight:normal">
                                            否
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="icheck-primary">
                                        <input type="radio" id="IsImg2" name="IsImg" checked="" value="1">
                                        <label for="IsImg2" style="font-weight:normal">
                                            是
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="OrderNum" class="col-sm-3 col-form-label">排序号</label>
                        <div class="col-sm-9">
                            <input type="text" name="OrderNum" id="OrderNum" class="form-control" placeholder="请输入排序号" value="1" />
                        </div>
                    </div>

                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default" data-dismiss="modal" id="close">关闭</button>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="btnOK">提交</button>
                    </div>
                </div>


            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!--删除弹出框-->
