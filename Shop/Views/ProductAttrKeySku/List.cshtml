@section js{
    <script>
        //var delID = null;

        $.getUrlParam = function (name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
            var r = window.location.search.substr(1).match(reg);
            if (r != null) return unescape(r[2]); return null;
        };
        var editID = null;
        var opreateFlag = 1; //1为添加，2为修改
        function delAttrValue(obj) {
            $(obj).parent().parent().remove();
        }

        $(function () {
            $("#table").DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": false,
                "ordering": false,
                "info": false,
                "autoWidth": true,
                "processing": true,
                "language": {
                    "zeroRecords": "没有结果",
                    "processing": "请求数据中....."
                },
                "serverSide": true,
                "ajax": function (data, callback, settings) {
                    var param = {};
                    param.draw = data.draw;
                    param.categoryId = $.getUrlParam('id');
                    $.ajax({
                        type: "POST",
                        url: "/ProductAttrKeySku/GetByCategoryID",
                        cache: false,
                        data: param,
                        dataType: "json",
                        success: function (result) {
                            setTimeout(function () {
                                callback(result);
                            }, 50);
                        }
                    });
                },

                columns: [
                    { "data": "ID" },
                    { "data": "AttrName" },
                    {
                        "data": function (data) {
                            if (data.EnterType == "1") {
                                return "手动录入";
                            } else {
                                return "下拉选择";
                            }
                        }
                    },
                    { "data": "OrderNum" },
                    {
                        "data": function (data) {
                            var html = "<button onclick=\"alertEditModal(" + data.ID + ")\" class=\"btn btn-outline-primary btn-sm\">编辑</button>";
                            html += "&nbsp;&nbsp;";
                            html += "<a href=\"#\" class=\"btn btn-outline-danger btn-sm\"  onclick=\"alertDelModal(" + data.ID + ");\">删除</a>";
                            return html;
                        }
                    }
                ]
            });
        });

        $(function () {
            $("#btnOK").click(function () {
                //1 收集数据
                var AttrName = $("#AttrName").val();
                var OrderNum = $("#OrderNum").val();
                //获取 radio选中项的值
                var EnterType = $("input[name='enterType']:checked").val();
                var IsImg = $("input[name='IsImg']:checked").val();

                //获取所有的属性值
                //each 遍历 相当于for循环
                var attrValues = []
                $("#attrValues input").each(function () {
                    attrValues.push($(this).val())
                })
                var ProductCategoryID = $.getUrlParam('id');
                var data = {
                    AttrName: AttrName,
                    OrderNum: OrderNum,
                    EnterType: EnterType,
                    AttrValues: attrValues,
                    ProductCategoryID: ProductCategoryID,
                    IsImg: IsImg
                };
                var url = "/ProductAttrKeySku/Add";
                if (opreateFlag == 2) {
                    data.ID = editID;
                    url = "/ProductAttrKeySku/Edit";
                }
                $.ajax({
                    url: url,
                    type: "POST",
                    data: JSON.stringify(data),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (data) {
                        if (data.state) {
                            //toastr.success(data.msg);
                            Swal.fire({
                                position: 'top-end',
                                icon: 'success',
                                title: data.msg,
                                showConfirmButton: false,
                                timer: 1500
                            })
                            //刷新datatable数据
                            $('#table').DataTable().ajax.reload();
                            if (opreateFlag == 2) {
                                $("#close").click();
                            } 
                            $("#AttrName").val("");
                            $("#OrderNum").val("");
                            $("input[name='enterType'][value='1']").prop("checked", "checked");
                            $("input[name='IsImg'][value='0']").prop("checked", "checked");
                            $("#attrValues div:gt(1)").remove();                            
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: data.msg
                            })
                        }
                    },
                    error: function (data) {
                        Swal.fire({
                            icon: 'error',
                            title: data.msg
                        })
                    }
                });
            });

            //点击弹出添加框
            $("#alertAddModal").click(function () {
                opreateFlag = 1;
                $("#add-modal").modal();
                $("#add-modal-title").text("规格添加");
                //清空数据
                $("#AttrName").val("");
                $("#OrderNum").val("");
                $("input[name='enterType'][value='1']").prop("checked", "checked");
                $("input[name='IsImg'][value='0']").prop("checked", "checked");
                $("#attrValues div:gt(1)").remove();
            });
            //点击添加属性值
            $("#addAttrValue").click(function () {
                var html = '<div class="row" style="margin-top:10px;"><div class="col-sm-9" ><input type="text" class="form-control" /></div ><div class="col-sm-3"><button class="btn btn-outline-danger" onclick="delAttrValue(this);">删除</button></div></div >';
                $("#attrValues").append(html);
            });
        });

        function alertEditModal(id) {
            editID = id;
            opreateFlag = 2;
            $("#add-modal").modal();
            $("#add-modal-title").text("规格修改");

            //清空数据
            $("#AttrName").val("");
            $("#OrderNum").val("");
            $("input[name='enterType'][value='1']").prop("checked", "checked");
            $("input[name='IsImg'][value='0']").prop("checked", "checked");
            $("#attrValues div:gt(1)").remove();

            $.ajax({
                type: "GET",
                url: "/ProductAttrKeySku/GetOne",
                cache: false,
                data: { id: id },
                dataType: "json",
                success: function (result) {
                    $("#AttrName").val(result.attrKey.AttrName);
                    $("#OrderNum").val(result.attrKey.OrderNum);
                    $("input[name='enterType'][value=" + result.attrKey.EnterType + "]").prop("checked", "checked");
                    $("input[name='IsImg'][value=" + result.attrKey.IsImg + "]").prop("checked", "checked");
                    $('#attrValues div:gt(1)').remove();
                    result.attrValue.map(function (v) {
                        var html = '<div class="row" style="margin-top:10px;"><div class="col-sm-9" ><input type="text" class="form-control" value = ' + v.AttrValue + '></div ><div class="col-sm-3"><button class="btn btn-outline-danger" onclick="delAttrValue(this);">删除</button></div></div >';
                        $("#attrValues").append(html);
                    });
                }
            });
        }
        function alertDelModal(ID) {
            //delID = ID;
            //$("#del-modal").modal();
            Swal.fire({
                title: "你确认要删除吗?",
                text: "此操作不可撤销!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "删除",
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.value) {
                    //if (!delID && !delImg) {
                    //    return;
                    //}
                    //var formData = new FormData();
                    //formData.append("ID", delID);
                    //formData.append("Img", delImg);

                    $.ajax({
                        url: "/ProductAttrKeySku/Delete",
                        type: 'POST',
                        data: { ID: ID },
                        async: false,
                        dataType: "json",
                        // 告诉jQuery不要去处理发送的数据
                        //processData: false,
                        //// 告诉jQuery不要去设置Content-Type请求头
                        //contentType: false,

                        success: function (data) {
                            if (data.state) {
                                //$("#del-modal").modal("hide");
                                Swal.fire(data.msg, "数据已成功删除。", "success");
                                //刷新datatable数据
                                $('#table').DataTable().ajax.reload();
                                //Swal.fire({
                                //    position: 'top-end',
                                //    icon: 'success',
                                //    title: data.msg,
                                //    showConfirmButton: false,
                                //    timer: 1500
                                //})
                            }
                            else {
                                Swal.fire({
                                    icon: 'error',
                                    title: data.msg
                                })
                            }
                        },
                        error: function (data) {
                            Swal.fire({
                                icon: 'error',
                                title: "删除失败！"
                            })
                        }
                    });
                }
            });
        }
    </script>
}
